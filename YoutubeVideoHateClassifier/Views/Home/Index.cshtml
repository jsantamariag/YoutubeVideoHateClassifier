@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <h1>Text Classification Demo</h1>
    <p>Paste a YouTube link below to analyze the video's audio content and classify it for hate speech.</p>
    <input type="text" id="youtube-link" placeholder="Enter YouTube link" style="width: 100%;">
    <button onclick="analyzeVideo()">Analyze</button>
    <div class="loading" id="loading">Processing... Please wait.</div>
    <div style="height:10px"></div>
    <div class="result" id="result">
        <h2>Analysis Report</h2>
        <p><strong>Classification:</strong> <span id="classification"></span></p>
        <p><strong>Confidence:</strong> <span id="confidence"></span>%</p>
    </div>
</div>
